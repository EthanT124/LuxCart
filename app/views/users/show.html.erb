<script>
    function openModel() {
        document.getElementById('select-modal').classList.remove('hidden');
    }
    function closeModel() {
        document.getElementById('select-modal').classList.add('hidden')
    }
    
    function revealPast() {
        console.log("revealPast function triggered");
        document.getElementById('past').classList.remove('hidden');
        document.getElementById('btnPast').innerText = "Hide Past Notifications";
        document.getElementById('btnPast').setAttribute('onclick', 'hidePast()');
    }

    function hidePast() {
        console.log("hidePast function triggered");
        document.getElementById('past').classList.add('hidden');
        document.getElementById('btnPast').innerText = "Show Past Notifications";
        document.getElementById('btnPast').setAttribute('onclick', 'revealPast()');
    }

    function updateStatus(id) {
        // Make a put request to /notifications/read/:id
        const csfrToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
        fetch(`/notifications/read/${id}`, {
            method: 'PUT',
            headers: {
                'X-CSRF-Token': csfrToken
            }
        }).then(response => {
            if (response.ok) {
                console.log("Notification status updated");
                location.reload();
            } else {
                console.log("Notification status not updated");
            }
        });
    }


</script>
